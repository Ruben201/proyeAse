@model Aseguradora.Models.TarjetaViewModel

@{
    ViewData["Title"] = "Pago de poliza";
    Layout = "_Layout2";
}
<h1>@ViewData["Title"]</h1>

@section Styles{
    <link rel="stylesheet" href="~/css/tarjetacredito.css" />
}
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/tarjetacredito.js" asp-append-version="true"></script>
    <script src="~/js/poliza.js" asp-append-version="true"></script>
}

<article class="row">
    <div class="col-12 col-sm-6 col-md-6 col-lg-5 col-xl-4">
        <div class="card" style="background-color: #76CF92; border: 1px solid #dee2e6; border-radius: 8px; padding: 20px;">
            <h5 class="card-header" style="background-color: #304B3A; border-radius: 8px; padding: 20px; text-align: center; color: #fff;">Detalles de pago</h5>
            <div class="card-body" style="background-color: #76CF92; border-radius: 8px; padding: 20px;"></div>
            <form class="custom-form" style="background-color: #76CF92; border: 1px solid #dee2e6; border-radius: 8px; padding: 20px;">
                <label asp-for="Card_number" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text" id="card-type-addon1"><span class="card-type"></span></span>
                    <input asp-for="Card_number" class="form-control" placeholder="0000 0000 0000 0000"
                           aria-label="Tarjeta de crédito" aria-describedby="card-type-addon1" />
                    <div class="card-valid">&#x2713</div>
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Card_number" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" type="text" class="form-control text-uppercase" placeholder="Nombre como aparece en la tarjeta">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="Expiry" class="form-label"></label>
                            <input asp-for="Expiry" type="text" maxlength="7" class="form-control" placeholder="mm/yyyy">
                            <span asp-validation-for="Expiry" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="Cvv" class="form-label"></label>
                            <input asp-for="Cvv" type=text maxlength="3" class="form-control" placeholder="XXX">
                            <span asp-validation-for="Cvv" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary" style=" background-color: #fff; text-align: center; color: black; border-color: white; width: 50%">Pagar</button>
                
            </form>
            <br />

        </div>
    </div>
    <div class="col-12 col-md-6 mt-5">
        <h4>Tarjetas de ejemplo</h4>
        <ul class="list-group">
            <li class="list-group-item">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Mastercard</div>
                    5100 0000 0000 0008
                </div>
            </li>
            <li class="list-group-item">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Amex</div>
                    3782 8224 6310 005
                </div>
            </li>
            <li class="list-group-item">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Visa</div>
                    4000 0000 0000 0002
                </div>
            </li>
            <li class="list-group-item">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Disvocer</div>
                    6011 0000 0000 0004
                </div>
            </li>
            <li class="list-group-item">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Visa electron</div>
                    4026 0000 0000 0002
                </div>
            </li>
        </ul>
    </div>
</article>